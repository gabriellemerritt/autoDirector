<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    <com.houndify.sample.MjpegView
        android:id="@+id/mv"
        android:layout_width="fill_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/msgText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top|left"
        android:text = "Awaiting Message"/>

    <TextView
        android:id="@+id/msgText2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top|left"
        android:text = "Awaiting Message"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:text="Awaiting search"
        android:textIsSelectable="true"/>

    <com.hound.android.fd.HoundifyButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
</LinearLayout><!-- From: file:/Users/gabriellemerritt/pennApps/autoDirector/houndify-sdk-sample-0.2.16/src/main/res/layout/activity_main.xml -->